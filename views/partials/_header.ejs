<header>
  <nav class="navbar navbar-expand-md navbar-dark navbar-main" style="font-size: larger;background-color: #408196;">
    <a class="navbar-brand navbar-inline" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

      </div>
    </div>
    <div class="collapse navbar-collapse" style="display:contents!important;" id="navbarNavAltMarkup"
      style="float:right;">
      <div class="navbar-nav">
        <% if (!user) { %>
          <div><a href="/register">
              <button class ="header-buttons" type="submit">Register</button></a>
          </div>
          <div><a href="/login">
              <button class ="header-buttons" type="submit">Login</button></a>
          </div>

          <% } else { %>

            <h5 class="header-text"> <%= user.email %></h5>
              <form method="POST" action="/logout">
                <button type="submit" class="header-logout"
               >Logout</button>
              </form>

              <% } %>
      </div>
    </div>
